---
import Layout from '../../../layouts/Layout.astro';
import { useTranslations } from '../../../i18n/utils';

const t = useTranslations('en');

// Placeholder para las imágenes - se actualizarán cuando agregues los archivos
const cafeImages: string[] = [];
const foodImages: string[] = [];
---

<Layout title="Tojol - Café & Kitchen | Li">
  <Fragment slot="head">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;900&display=swap" rel="stylesheet" />
  </Fragment>

  <main class="min-h-screen bg-white" style="font-family: 'Poppins', sans-serif;">
    <!-- Hero Section -->
    <section class="relative min-h-screen bg-tojol-yellow overflow-hidden content-center">
      <div class="w-full px-32">
        <!-- Left: Logo + Text -->
        <div class="flex flex-col justify-center max-w-lg relative z-10">
          <div class="mb-12">
            <img
              src="/projects/tojol/logo.svg"
              alt="Tojol Logo"
              class="h-20 lg:h-28"
            />
          </div>

          <div class="space-y-1 text-2xl lg:text-4xl text-black font-black">
            <p class="mb-3">Healthy Breakfast</p>
            <p class="mb-3">Dairy & Gluten-Free</p>
            <p>Vegan Options</p>
          </div>
        </div>
      </div>

      <!-- Giant white circle - center at top-right, showing bottom-left portion -->
      <div class="absolute top-0 right-0 translate-x-1/2 -translate-y-1/2 w-[1950px] h-[1950px] bg-white rounded-full overflow-hidden">
        <!-- Image rotated 40deg inside circle -->
        <img
          src="/projects/tojol/hero_img.svg"
          alt="Tojol collage"
          class="absolute bottom-20 right-90 w-[1900px] rotate-[40deg]"
        />
      </div>
    </section>

    <!-- Coffee Section -->
    <section class="relative py-20 lg:py-28 overflow-hidden">
      <!-- Video Background -->
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-b from-amber-900/70 to-amber-800/80"></div>
      </div>

      <div class="relative z-10 max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4">
            {t('tojol.coffeeTitle')}
          </h2>
          <p class="text-amber-100/80 max-w-xl mx-auto">
            {t('tojol.coffeeDesc')}
          </p>
        </div>

        <!-- Coffee Gallery -->
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4" id="cafe-gallery">
          {cafeImages.length > 0 ? (
            cafeImages.map((img, i) => (
              <div class:list={[
                'rounded-xl overflow-hidden shadow-lg',
                i === 0 && 'md:col-span-2 md:row-span-2'
              ]}>
                <img
                  src={img}
                  alt={`Tojol coffee ${i + 1}`}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>
            ))
          ) : (
            <div class="col-span-full text-center py-16 text-amber-100/60">
              <p class="text-sm">Add photos in /public/projects/tojol/cafe/</p>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Food Section -->
    <section class="relative py-20 lg:py-28 overflow-hidden">
      <!-- Video Background -->
      <div class="absolute inset-0 z-0">
        <video
          autoplay
          muted
          loop
          playsinline
          class="w-full h-full object-cover"
        >
          <source src="/projects/tojol/comida/video-bg.mp4" type="video/mp4" />
        </video>
        <div class="absolute inset-0 bg-gradient-to-b from-emerald-900/70 to-emerald-800/80"></div>
      </div>

      <div class="relative z-10 max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4">
            {t('tojol.foodTitle')}
          </h2>
          <p class="text-emerald-100/80 max-w-xl mx-auto">
            {t('tojol.foodDesc')}
          </p>
        </div>

        <!-- Food Gallery -->
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4" id="food-gallery">
          {foodImages.length > 0 ? (
            foodImages.map((img, i) => (
              <div class:list={[
                'rounded-xl overflow-hidden shadow-lg',
                i === 0 && 'md:col-span-2 md:row-span-2'
              ]}>
                <img
                  src={img}
                  alt={`Tojol food ${i + 1}`}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>
            ))
          ) : (
            <div class="col-span-full text-center py-16 text-emerald-100/60">
              <p class="text-sm">Add photos in /public/projects/tojol/comida/</p>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Google Reviews Section -->
    <section class="py-20 lg:py-28 bg-white">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            {t('tojol.reviewsTitle')}
          </h2>
        </div>

        <!-- Reviews Image -->
        <div class="max-w-4xl mx-auto">
          <img
            src="/projects/tojol/reviews.png"
            alt="Tojol Google Reviews - 5.0 rating"
            class="w-full rounded-2xl shadow-lg"
          />
        </div>
      </div>
    </section>

    <!-- Back to Projects -->
    <section class="py-12 bg-white">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <a
          href="/en/#work"
          class="inline-flex items-center gap-3 px-8 py-4 bg-gray-900 text-white rounded-full font-semibold hover:bg-gray-800 transition-colors"
        >
          <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
          {t('tojol.backToProjects')}
        </a>
      </div>
    </section>
  </main>
</Layout>
