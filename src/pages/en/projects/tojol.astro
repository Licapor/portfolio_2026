---
import Layout from '../../../layouts/Layout.astro';
import { useTranslations } from '../../../i18n/utils';

const t = useTranslations('en');

// Placeholder para las imágenes - se actualizarán cuando agregues los archivos
const cafeImages: string[] = [];
const foodImages: string[] = [];
---

<Layout title="Tojol - Café & Kitchen | Li">
  <Fragment slot="head">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;900&display=swap" rel="stylesheet" />
  </Fragment>

  <main class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="relative min-h-screen bg-tojol-yellow overflow-hidden content-center">
      <div class="w-full px-32">
        <!-- Left: Logo + Text -->
        <div class="flex flex-col max-w-lg relative z-10">
            <img
              src="/projects/tojol/logo.svg"
              alt="Tojol Logo"
              class="h-40 lg:h-48"
            />
        </div>
      </div>

      <!-- Giant white circle - center at top-right, showing bottom-left portion -->
      <div class="absolute top-0 right-0 translate-x-1/2 -translate-y-1/2 w-[1950px] h-[1950px] bg-white rounded-full overflow-hidden">
        <!-- Image rotated 40deg inside circle -->
        <img
          src="/projects/tojol/hero_img.svg"
          alt="Tojol collage"
          class="absolute bottom-20 right-90 w-[1900px] rotate-[40deg]"
        />
      </div>
    </section>

    <!-- Intro Section -->
    <section class="relative pt-14 pb-12 lg:pt-20 overflow-hidden">
      <div class="text-center px-48">
        <h2 class="text-2xl font-bold mb-12">
          {t('tojol.subtitle')}
        </h2>
        <p class="text-xl font-medium leading-loose"> {t('tojol.intro')}</p>
      </div>
    </section>
    <!-- Coffee Section -->
    <section>
        <p class="bg-tojol-green py-10 text-white text-center font-bold text-4xl">{t('tojol.coffeeTitle')}</p>
        <p class="px-48 py-8 font-bold text-center font-lg tracking-wider uppercase">{t('tojol.coffeeDesc')}</p>
        <!-- Coffee Gallery -->
        <div class="px-48 py-10">
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
            <!-- Imágenes pequeñas: cf1 y cf3 -->
            <div class="lg:col-span-4 flex flex-col gap-6">
              <img
                src="/projects/tojol/coffee/cf1.webp"
                alt="Tojol coffee"
                class="w-full h-full object-cover rounded-2xl"
              />
              <img
                src="/projects/tojol/coffee/cf3.webp"
                alt="Tojol coffee"
                class="w-full h-full object-cover rounded-2xl"
              />
            </div>
            <!-- Imagen grande: cf2 -->
            <div class="lg:col-span-8">
              <img
                src="/projects/tojol/coffee/cf2.webp"
                alt="Tojol coffee"
                class="w-full h-full object-cover rounded-2xl"
              />
            </div>
          </div>
        </div>
      
        
    </section>

    <!-- Food Section -->
    <section>
        <p class="bg-tojol-green py-10 text-white text-center font-bold text-4xl">{t('tojol.foodTitle')}</p>
        <p class="px-48 py-8 font-bold text-center font-lg tracking-wider uppercase">{t('tojol.foodDesc')}</p>
        <!-- Food Gallery -->
        <div class="px-48 py-10">
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
            <!-- Imagen grande: f4 -->
            <div class="lg:col-span-8">
              <img
                src="/projects/tojol/food/f4.webp"
                alt="Tojol food"
                class="w-full h-170 object-cover rounded-2xl"
              />
            </div>
            <!-- Imágenes pequeñas: f1 y f2 -->
            <div class="lg:col-span-4 flex flex-col gap-6">
              <img
                src="/projects/tojol/food/f1.webp"
                alt="Tojol food"
                class="w-full h-82 object-cover rounded-2xl"
              />
              <img
                src="/projects/tojol/food/f2.webp"
                alt="Tojol food"
                class="w-full h-82 object-cover rounded-2xl"
              />
            </div>
          </div>
        </div>
    </section>

    <!-- Google Reviews Section -->
    <section>
      <p class="bg-tojol-green py-10 text-white text-center font-bold text-4xl">{t('tojol.reviewsTitle')}</p>
      <p class="px-48 py-8 font-bold text-center font-lg tracking-wider uppercase">{t('tojol.reviewsDesc')}</p>

      <!-- Reviews Gallery - Opción 3: Masonry -->
      <div class="px-48 py-10">
        <div class="columns-3 md:columns-4 lg:columns-5 gap-3 space-y-3">
          <img src="/projects/tojol/reviews/reviews_overall.webp" alt="Tojol Google Reviews" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r1.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r2.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r3.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r5.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r6.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r7.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r8.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r9.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r010.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
          <img src="/projects/tojol/reviews/r011.webp" alt="Review" class="w-full rounded-xl shadow-md break-inside-avoid" />
        </div>
      </div>
    </section>

    <!-- Back to Projects -->
    <section class="py-12 bg-white">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <a
          href="/en/#work"
          class="inline-flex items-center gap-3 px-8 py-4 bg-gray-900 text-white rounded-full font-semibold hover:bg-gray-800 transition-colors"
        >
          <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
          {t('tojol.backToProjects')}
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main, main * {
    font-family: 'Poppins', sans-serif;
  }

  .review-card {
    position: relative;
    height: 180px;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    cursor: pointer;
  }

  .review-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    object-position: top;
    border-radius: 12px;
    transition: all 0.4s ease;
  }

  .review-card:hover img {
    position: absolute;
    top: 0;
    left: 0;
    height: auto;
    z-index: 20;
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.3);
  }
</style>
