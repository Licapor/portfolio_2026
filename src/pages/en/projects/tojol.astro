---
import Layout from '../../../layouts/Layout.astro';
import { useTranslations } from '../../../i18n/utils';

const t = useTranslations('en');
---

<Layout title="Tojol - Café & Kitchen | Li">
  <Fragment slot="head">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;900&display=swap" rel="stylesheet" />
  </Fragment>

  <main class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="relative min-h-screen bg-tojol-yellow overflow-hidden content-center">
      <div class="w-full px-6 md:px-16 lg:px-32">
        <!-- Left: Logo + Text -->
        <div class="flex flex-col items-center lg:items-start max-w-lg mx-auto lg:mx-0 relative z-10">
            <img
              src="/projects/tojol/logo.svg"
              alt="Tojol Café & Kitchen logo - healthy breakfast restaurant"
              class="h-40 lg:h-48"
            />
        </div>
      </div>

      <!-- Giant white circle - hidden on mobile, visible on lg+ -->
      <div class="hidden lg:block absolute top-0 right-0 translate-x-1/2 -translate-y-1/2 w-[1950px] h-[1950px] bg-white rounded-full overflow-hidden">
        <!-- Image rotated 40deg inside circle -->
        <img
          src="/projects/tojol/hero_img.svg"
          alt="Collage of Tojol healthy dishes and coffee"
          class="absolute bottom-20 right-90 w-[1900px] rotate-40"
        />
      </div>
    </section>

    <!-- Intro Section -->
    <section class="relative pt-14 pb-12 lg:pt-20 overflow-hidden">
      <div class="text-center px-6 md:px-16 lg:px-48">
        <h2 class="text-2xl font-bold mb-12">
          {t('tojol.subtitle')}
        </h2>
        <p class="text-xl font-medium leading-loose">{t('tojol.intro')}</p>
      </div>
    </section>

    <!-- Coffee Section -->
    <section>
        <p class="bg-tojol-green py-10 text-white text-center font-bold text-2xl md:text-4xl">{t('tojol.coffeeTitle')}</p>
        <p class="px-6 md:px-16 lg:px-48 py-8 font-bold text-center text-sm md:text-base tracking-wider uppercase">{t('tojol.coffeeDesc')}</p>
        <!-- Coffee Gallery -->
        <div class="px-6 md:px-16 lg:px-48 py-10">
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
            <!-- Imágenes pequeñas: cf1 y cf3 -->
            <div class="lg:col-span-4 flex flex-col gap-6">
              <img
                src="/projects/tojol/coffee/cf1.webp"
                alt="Barista preparing filter coffee at Tojol"
                class="w-full h-full object-cover rounded-2xl"
                loading="lazy"
              />
              <img
                src="/projects/tojol/coffee/cf3.webp"
                alt="Drip coffee brewing process"
                class="w-full h-full object-cover rounded-2xl"
                loading="lazy"
              />
            </div>
            <!-- Imagen grande: cf2 -->
            <div class="lg:col-span-8">
              <img
                src="/projects/tojol/coffee/cf2.webp"
                alt="Fresh specialty coffee cup with latte art"
                class="w-full h-full object-cover rounded-2xl"
                loading="lazy"
              />
            </div>
          </div>
        </div>
    </section>

    <!-- Food Section -->
    <section>
        <p class="bg-tojol-green py-10 text-white text-center font-bold text-2xl md:text-4xl">{t('tojol.foodTitle')}</p>
        <p class="px-6 md:px-16 lg:px-48 py-8 font-bold text-center text-sm md:text-base tracking-wider uppercase">{t('tojol.foodDesc')}</p>
        <!-- Food Gallery -->
        <div class="px-6 md:px-16 lg:px-48 py-10">
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
            <!-- Imagen grande: f4 -->
            <div class="lg:col-span-8">
              <img
                src="/projects/tojol/food/f4.webp"
                alt="Healthy avocado toast with fresh vegetables"
                class="w-full h-auto lg:h-[680px] object-cover rounded-2xl"
                loading="lazy"
              />
            </div>
            <!-- Imágenes pequeñas: f1 y f2 -->
            <div class="lg:col-span-4 flex flex-col gap-6">
              <img
                src="/projects/tojol/food/f1.webp"
                alt="Fresh berry smoothie bowl"
                class="w-full h-auto lg:h-[328px] object-cover rounded-2xl"
                loading="lazy"
              />
              <img
                src="/projects/tojol/food/f2.webp"
                alt="Tropical fruit smoothie with papaya"
                class="w-full h-auto lg:h-[328px] object-cover rounded-2xl"
                loading="lazy"
              />
            </div>
          </div>
        </div>
    </section>

    <!-- Google Reviews Section -->
    <section>
      <p class="bg-tojol-green py-10 text-white text-center font-bold text-2xl md:text-4xl">{t('tojol.reviewsTitle')}</p>
      <p class="px-6 md:px-16 lg:px-48 py-8 font-bold text-center text-sm md:text-base tracking-wider uppercase">{t('tojol.reviewsDesc')}</p>

      <!-- Reviews Gallery - Masonry -->
      <div class="px-6 md:px-16 lg:px-48 py-10">
        <div class="columns-2 md:columns-4 lg:columns-5 gap-3 space-y-3">
          <img src="/projects/tojol/reviews/reviews_overall.webp" alt="Tojol Google Reviews - 5.0 stars overall rating" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r1.webp" alt="Customer review praising the vegetarian options and cozy atmosphere" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r2.webp" alt="5-star review about healthy food and garden vibe" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r3.webp" alt="Customer recommending the Coco Latte coffee" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r5.webp" alt="Review about friendly staff and great food" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r6.webp" alt="Customer review about best coffee experience" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r7.webp" alt="5-star review praising the gluten-free options" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r8.webp" alt="Review about cozy jungle vibe and amazing food" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r9.webp" alt="Customer loving the sun butter mango toast" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r010.webp" alt="Review recommending the avocado toast and fresh juices" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
          <img src="/projects/tojol/reviews/r011.webp" alt="5-star review about excellent service and healthy breakfast" class="w-full rounded-xl shadow-md break-inside-avoid" loading="lazy" />
        </div>
      </div>
    </section>

    <!-- Back to Projects -->
    <section class="py-12 bg-white">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <a
          href="/en/#work"
          class="inline-flex items-center gap-3 px-8 py-4 bg-gray-900 text-white rounded-full font-semibold hover:bg-gray-800 transition-colors"
        >
          <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
          {t('tojol.backToProjects')}
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main, main * {
    font-family: 'Poppins', sans-serif;
  }
</style>
