---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

interface Props {
  labelKey: string;
  titleKey: string;
  titleOutlineKey?: string;
  class?: string;
}

const { labelKey, titleKey, titleOutlineKey, class: className } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class:list={['reveal', className]}>
  <span class="text-gold font-semibold text-lg">{t(labelKey)}</span>
  <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-bold text-gray-900 mt-2">
    {t(titleKey)} {titleOutlineKey && <span class="text-outline">{t(titleOutlineKey)}</span>}
  </h2>
</div>
