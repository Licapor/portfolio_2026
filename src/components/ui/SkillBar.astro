---
interface Props {
  name: string;
  level: number;
}

const { name, level } = Astro.props;
---

<div class="group">
  <div class="flex justify-between text-sm mb-1">
    <span class="text-gray-700 font-medium">{name}</span>
    <span class="text-gold">{level}%</span>
  </div>
  <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
    <div
      class="skill-bar h-full rounded-full transition-all duration-1000 group-hover:scale-x-100"
      style={`width: ${level}%;`}
    ></div>
  </div>
</div>

<style>
  .skill-bar {
    background: linear-gradient(90deg, var(--color-sage), var(--color-mint), var(--color-gold));
  }
</style>
