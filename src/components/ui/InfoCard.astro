---
interface Props {
  variant?: 'default' | 'gradient';
  class?: string;
}

const { variant = 'default', class: className = '' } = Astro.props;
---

<div class:list={[
  'info-card p-6 flex flex-col justify-between relative overflow-hidden min-h-[140px]',
  variant === 'gradient' ? 'info-card--gradient' : 'info-card--default',
  className
]}>
  <slot />
</div>

<style>
  .info-card {
    border-radius: 24px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .info-card--default {
    background: white;
    border: 1px solid #e5e7eb;
  }

  .info-card--default:hover {
    border-color: var(--color-primary);
    box-shadow: 0 20px 40px -20px rgba(16, 185, 129, 0.3);
    transform: translateY(-4px);
  }

  .info-card--gradient {
    background: linear-gradient(135deg, var(--color-sage), var(--color-mint));
    border: 1px solid var(--color-sage);
  }

  .info-card--gradient:hover {
    box-shadow: 0 20px 40px -20px rgba(90, 143, 118, 0.4);
    transform: translateY(-4px);
  }
</style>
