---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/utils';
import GeometricShapes from '../ui/GeometricShapes.astro';
import logoClaro from '../../assets/icons/li_logo_claro.svg';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
const homePath = getLocalizedPath('/', lang);
---

<footer class:list={['py-8 bg-dark text-white relative overflow-hidden', className]}>
  <GeometricShapes variant="footer" />

  <div class="max-w-7xl mx-auto px-6 lg:px-12 relative">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Logo/Name -->
      <a href={homePath} aria-label={t('global.name')}>
        <img src={logoClaro.src} alt={t('global.name')} class="h-8 w-auto" />
      </a>

      <!-- Copyright -->
      <p class="text-gray-400 text-sm text-center">
        &copy; {currentYear} {t('global.name')}. {t('footer.copyright')}
      </p>

      <!-- Back to top -->
      <button
        type="button"
        id="back-to-top"
        class="flex items-center gap-2 text-mint hover:text-gold transition-colors text-sm cursor-pointer"
        aria-label={t('footer.backToTop')}
      >
        {t('footer.backToTop')}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
        </svg>
      </button>
    </div>
  </div>
</footer>

<script>
  document.getElementById('back-to-top')?.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>
