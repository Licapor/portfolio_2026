---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { projects } from '../../content/projects';
import GeometricShapes from '../ui/GeometricShapes.astro';
import SectionHeader from '../ui/SectionHeader.astro';
import ProjectCard from '../ProjectCard.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="work" class="py-24 lg:py-32 bg-cream/20 relative overflow-hidden">
  <GeometricShapes variant="projects" />

  <div class="max-w-7xl mx-auto px-6 lg:px-12 relative">
    <!-- Section Header -->
    <div class="flex flex-col lg:flex-row lg:items-end justify-between mb-16 gap-6">
      <SectionHeader
        labelKey="projects.label"
        titleKey="projects.title"
        titleOutlineKey="projects.titleOutline"
      />
    </div>

    <!-- Bento Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project, index) => (
        <div class:list={[
          `reveal stagger-${(index % 6) + 1}`,
          project.layout === 'wide' && 'md:col-span-2 lg:col-span-2',
          project.layout === 'tall' && 'md:row-span-2'
        ]}>
          <ProjectCard
            title={t(project.titleKey)}
            description={t(project.descriptionKey)}
            tags={project.tags}
            image={project.image}
            video={project.video}
            demoUrl={project.demoUrl}
            codeUrl={project.codeUrl}
            projectUrl={project.projectUrl}
            featured={!!project.layout}
            color={project.layout ? 'emerald' : 'gray'}
            featuredLabel={t('projects.featured')}
            liveDemoLabel={t('projects.liveDemo')}
            viewProjectLabel={t('projects.liveDemo')}
            codeLabel={t('projects.code')}
          />
        </div>
      ))}
    </div>

    <!-- View All Link -->
    <div class="mt-16 text-center reveal">
      <a
        href="https://linkedin.com/in/lilianacapor"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 text-sage font-semibold text-lg hover-underline group"
      >
        {t('projects.viewAll')}
        <svg class="w-5 h-5 transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
